<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_up"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Attributions"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:drawablePadding="15sp"
        android:gravity="center_vertical"
        android:text="Freepik (https://www.freepik.com/)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/freepik_ic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12sp"
        android:drawablePadding="15sp"
        android:gravity="center_vertical"
        android:text="Lottiefiles (https://lottiefiles.com/)"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/lottie_ic" />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20sp"
        android:backgroundTint="@color/primary"
        android:text="@string/dismiss"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
