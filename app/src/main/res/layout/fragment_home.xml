<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scannerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50sp"
            android:orientation="vertical"
            android:padding="18sp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3sp"
                android:layout_marginBottom="10sp"
                android:text="@string/start_learning"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:id="@+id/open_learnings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp"
                        tools:ignore="RtlSymmetry">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:src="@drawable/java"
                            app:civ_border_color="@color/primaryVariant"
                            app:civ_border_width="0.8dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Java"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Learn every aspect of Java through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:src="@drawable/java"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Java Full Stack"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Learn every aspect of Java as a Full stack developer through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:padding="3sp"
                            android:src="@drawable/python"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Python"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Ace every concept of Python through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:padding="3sp"
                            android:src="@drawable/python"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Python Full Stack"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Ace every concept of Python for Full Stack development through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:padding="3sp"
                            android:src="@drawable/ui_frontend"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Front End Development"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Ace every concept of Frontend development through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="@dimen/dimen_12sp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="8sp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="12sp"
                        android:orientation="vertical"
                        android:paddingStart="3sp">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="7sp"
                            android:padding="3sp"
                            android:src="@drawable/automation"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginEnd="10sp"
                            android:alpha="0.8"
                            android:singleLine="true"
                            android:text="Automation Testing"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="3sp"
                            android:layout_marginEnd="8sp"
                            android:layout_marginBottom="3sp"
                            android:alpha="0.8"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Ace every concept of the topic through Video lectures"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:text="Insider Story"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="450sp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen_12sp"
                app:cardElevation="5sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="450sp"
                    android:src="@drawable/bharatplacedmainposter" />

            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300sp">

                <TextView
                    android:id="@+id/liveSecured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.5"
                    android:text="Enjoy\nLearning"
                    android:textColor="#a3a3a3"
                    android:textSize="65sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liveSecured"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Developed by Bharat Placed"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_12sp"
        android:layout_marginTop="@dimen/dimen_12sp"
        android:layout_marginEnd="@dimen/dimen_12sp"
        android:layout_marginBottom="10sp"
        android:tooltipText="Schedule Plans"
        app:cardCornerRadius="@dimen/dimen_12sp"
        app:cardElevation="5sp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:id="@+id/linearLayoutBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5sp"
            android:tooltipText="Schedule Plans">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10sp"
                android:src="@drawable/bookmark_ic"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_planner"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardViewBookmark"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/dimen_12sp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/task_ic_img"
        android:tint="@color/primaryVariant"
        android:tooltipText="Add Task"
        tools:targetApi="o" />

</RelativeLayout>