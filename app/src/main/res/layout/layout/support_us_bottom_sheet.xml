<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_up"
    android:orientation="vertical"
    android:padding="@dimen/dimen_12sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/support_us_excl"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"
        android:gravity="center_vertical"
        android:text="@string/the_help_provided_is_free_of_cost_but_the_cost_of_backend_services_is_not_however_small_if_possible_please_do_contribute_to_let_us_continue_the_help_for_free"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="10sp"
        android:gravity="center_vertical"
        android:text="@string/mentioned_below_is_the_vpa_or_upi_id_you_can_copy_that_and_contribute_through_your_way_nthank_you"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/copyUPI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/coloured_light_bg"
        android:drawablePadding="15sp"
        android:gravity="center_vertical"
        android:padding="15sp"
        android:text="@string/a_nagrikar_paytm"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/copy_ic"
        app:drawableStartCompat="@drawable/pay_ic" />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20sp"
        android:backgroundTint="@color/primary"
        android:text="@string/dismiss"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
